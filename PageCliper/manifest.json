{
  "name": "ZHS-PageCliper",
  "description": "Null",
  "version": "1.0",
  "permissions": [
    "tabs",
    "background"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Copy title and url"
  },
  "manifest_version": 2,
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
    "commands": {
    "toggle-feature": {
      "suggested_key": { "default": "Ctrl+Shift+X" },
      "description": "Copy the title and url into clipboard"
    }
  }
}
